<ScanQRCodeView>
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: [1, 1, 1, 1]

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: [dp(0), dp(8)]
            spacing: dp(12)

            MDIconButton:
                icon: "arrow-left"
                icon_size: sp(24)
                pos_hint: {"center_y": .5}
                theme_icon_color: "Custom"
                icon_color: [0.35, 0.35, 0.35, 1]
                on_release: root.back()

            MDLabel:
                text: "Scan"
                font_size: sp(24)
                bold: True
                color: [0.35, 0.35, 0.35, 1]
                pos_hint: {"center_y": .5}
            Widget:
                size_hint_x: 1

        MDBoxLayout:
            id: box_layout
            orientation: 'vertical'
            md_bg_color: [1, 1, 1, 1]
