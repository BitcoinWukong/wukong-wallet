<SendBitcoinView>
    address_balance_label: address_balance_label
    addresses_list_view: addresses_list_view

    amount_input: amount_input
    fee_input: fee_input
    target_address_input: target_address_input

    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        md_bg_color: [1, 1, 1, 1]

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: [dp(0), dp(8)]
            spacing: dp(12)

            MDIconButton:
                icon: "arrow-left"
                icon_size: sp(24)
                pos_hint: {"center_y": .5}
                theme_icon_color: "Custom"
                icon_color: [0.35, 0.35, 0.35, 1]
                on_release: root.back()

            MDLabel:
                text: "Send"
                font_size: sp(24)
                bold: True
                color: [0.35, 0.35, 0.35, 1]
                pos_hint: {"center_y": .5}

        Widget:
            height: dp(16)
            size_hint_y: None

        MDBoxLayout:
            orientation: 'vertical'
            padding: [dp(16), dp(0)]
            spacing: dp(16)
            size_hint_y: 1
            md_bg_color: [1, 1, 1, 1]

            MDTextButton:
                id: address_balance_label
                text: "- sats"
                font_style: 'H4'
                size_hint_x: 1
                halign: "center"
                adaptive_height: True
                on_release:
                    root.press_address_balance()

            ScrollView:
                size_hint_y: None
                height: dp(80)
                do_scroll_x: False

                MDList:
                    id: addresses_list_view

            MDRaisedButton:
                text: "Select Addresses"
                size_hint_x: 1
                on_release: root.press_select_addresses()

            MDTextField:
                id: target_address_input
                hint_text: "Receiver Address"
                multiline: True

            MDTextField:
                id: amount_input
                hint_text: "Sats"
                on_text_validate: root.validate_amount_and_fee_input()

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(16)
                adaptive_height: True

                MDTextField:
                    id: fee_input
                    text: "1"
                    hint_text: "sats/vbyte"
                    on_text_validate: root.validate_amount_and_fee_input()

                MDLabel:
                    id: total_fee
                    text: "Total Tx Fee: 141 sats"
                    size_hint_y: 1
                    # adaptive_height: True

            MDTextField:
                id: change_amount
                multiline: True
                disabled: True
                hint_text: "Change Amount"
                text: "N/A"

            MDTextField:
                id: change_address
                multiline: True
                disabled: True
                hint_text: "Change Address"
                text: "N/A"

            MDRaisedButton:
                id: create_tx_button
                text: "Create Transaction"
                font_style: 'H6'
                size_hint_x: 1
                on_release: root.press_create_transaction()

            Widget:
                size_hint_y: 1
