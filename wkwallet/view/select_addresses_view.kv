<SelectAddressesView>
    selected_addresses_list_view: selected_addresses_list_view
    available_addresses_list_view: available_addresses_list_view

    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        md_bg_color: [1, 1, 1, 1]

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: [dp(0), dp(8)]
            spacing: dp(12)

            MDIconButton:
                icon: "arrow-left"
                icon_size: sp(24)
                pos_hint: {"center_y": .5}
                theme_icon_color: "Custom"
                icon_color: [0.35, 0.35, 0.35, 1]
                on_release: root.back()

            MDLabel:
                text: "Select Addresses"
                font_size: sp(24)
                bold: True
                color: [0.35, 0.35, 0.35, 1]
                pos_hint: {"center_y": .5}

        Widget:
            height: dp(16)
            size_hint_y: None

        MDBoxLayout:
            orientation: 'vertical'
            padding: [dp(16), dp(0)]
            spacing: dp(16)
            size_hint_y: 1
            md_bg_color: [1, 1, 1, 1]

            MDLabel:
                text: "Selected Addresses"
                adaptive_height: True

            ScrollView:
                size_hint_y: 0.3
                do_scroll_x: False

                MDList:
                    id: selected_addresses_list_view

            MDLabel:
                text: "Available Addresses"
                adaptive_height: True

            ScrollView:
                size_hint_y: 0.7
                do_scroll_x: False

                MDList:
                    id: available_addresses_list_view
